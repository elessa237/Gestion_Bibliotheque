<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Register
			{% endblock %}
		</title>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

	</head>
	<body class="account-page">

		{% block body %}

			<div class="main-wrapper">
				<div class="account-content">
					<a href="{{path('biblio_home')}}" class="btn btn-primary apply-btn">bibliotheque</a>

					<div
						class="container">

						<!-- Account Logo -->
						<div class="account-logo">
							<img src="img/logo2.png">
						</div>
						<!-- /Account Logo -->

						<div class="account-box">
							<div class="account-wrapper">
								<h3 class="account-title">Register</h3>
								<p class="account-subtitle">Access to our dashboard</p>

								<!-- Account Form -->
								{{ form_start(registrationForm) }}

								<div class="form-group">
									<label>Nom d'utilisateur</label>
									{{ form_row(registrationForm.username) }}
								</div>
								<div class="form-group">
									<label>Email</label>
									{{ form_row(registrationForm.email) }}

								</div>
								<div class="form-group">
									<label>Numero</label>
									{{ form_row(registrationForm.number) }}
								</div>
								<div class="form-group">
									<label>Localisation</label>
									{{ form_row(registrationForm.location) }}
								</div>
								<div class="form-group">
									<label>Sexe</label>
									{{ form_row(registrationForm.sex) }}
								</div>

								<div class="form-group">
									<label>Mot de passe</label>
									{{ form_row(registrationForm.password) }}
								</div>

								<div class="form-group">
									<label>Confirmer le mot de passe</label>
									{{ form_row(registrationForm.confirm) }}
								</div>

								<div class="form-group text-center">
									<button type="submit" class="btn btn-primary account-btn">Register</button>
								</div>
								<div class="account-footer">
									<p>Vous avez deja un compte?
										<a href="{{path("login")}}">Login</a>
									</p>
								</div>
								{{ form_end(registrationForm) }}

								<!-- /Account Form -->
							</div>
						</div>
					</div>
				</div>
			</div>

		{% endblock %}


		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>

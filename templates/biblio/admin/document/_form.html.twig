{{ form_start(form, {'attr': {'class':'form container'}}) }}
<div class="form-group row mb-3">
	<label class="col-form-label col-md-2">Nom du document</label>
	<div class="col-md-10">
		{{form_widget(form.name)}}
	</div>
</div>

<div class="form-group row mb-2">

	<label class="col-form-label col-md-2">Document</label>
	<div class="col-md-10">
		{{form_widget(form.docFile)}}
	</div>
</div>

<div class="form-group mb-3">
	<button class="btn btn-primary float-end">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}
